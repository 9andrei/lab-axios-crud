<h1>New Drag Queen</h1>

<form action="/drags" method="POST">
  <div class="mb-3">
    <label for="name" class="form-label">Drag Queen Name</label>
    <input type="text" value="{{drag.name}}" class="form-control {{#if error}} is-invalid {{/if}}" id="name" name="name">
      {{#if error}}
        <div class="invalid-feedback">
          {{error}}
        </div>
      {{/if}}
  </div>
  <div class="mb-3">
    <label for="season" class="form-label">Season she compited on</label>
    <input type="number" class="form-control" id="season" name="season">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>